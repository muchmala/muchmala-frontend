body
    overflow hidden
    font-size 14px
    font-family helvetica

input
    font-family helvetica
    
.control
    border-bottom 1px dotted #000
    cursor pointer
    
.control:hover
    border-bottom none
    
#display
    position absolute
    overflow hidden
    height 100%
    width 100%
    
#viewport
    height 100%
    width 100%

.viewportContent
    z-index 1000

.viewportContent canvas
    position absolute
    z-index 2
    
.button
    display inline-block
    padding 0 10px
    height 16px
    line-height 15px
    font-size 10px
    color #000
    cursor pointer
    text-align center
    background #fff
    border-radius 9px
    font-family helvetica
    vertical-gradient(rgb(170,170,170), rgb(255,255,255))
    
.button.highlight
    color #fff
    background rgb(255,0,0)
    vertical-gradient(rgb(150,0,0), rgb(255,0,0))
    
.button:hover
    color #000
    vertical-gradient(rgb(210,210,210), rgb(255,255,255))
    
.button:active
    background rgb(230,230,230)

.button.border
    border 1px solid #555

.button.small
    padding 0 6px
    line-height 10px
    height 12px
    
.button.big
    padding 0 15px
    height 30px
    line-height 30px
    font-size 14px
    font-weight bold
    border-radius 16px
    font-family trebuchet
    vertical-gradient(rgb(235,235,0), rgb(255,255,255))
    
.button.big:hover
    vertical-gradient(rgb(235,235,150), rgb(255,255,255))
    
.button.big:active
    background rgb(235,235,150)
    
#selected
    display none
    position absolute
    z-index 1002
    right 175px
    bottom 5px
    height 66px
    width 66px
    background-repeat no-repeat
    background-position top left
    opacity 0.7

#selected._0000
    background-position -0px -0px
#selected._1000
    background-position -132px -0px
#selected._0010
    background-position -0px -66px
#selected._1110
    background-position -132px -66px
#selected._1101
    background-position -0px -132px
#selected._1100
    background-position -132px -132px
#selected._0110
    background-position -0px -198px
#selected._0101
    background-position -132px -198px
#selected._1111
    background-position -66px -0px
#selected._0100
    background-position -198px -0px
#selected._0001
    background-position -66px -66px
#selected._0111
    background-position -198px -66px
#selected._1011
    background-position -66px -132px
#selected._0011
    background-position -198px -132px
#selected._1001
    background-position -66px -198px
#selected._1010
    background-position -198px -198px

#viewport .tooltip
    display inline-block
    position absolute
    z-index 9999
    font-size 10px
    background #ff7
    height 18px
    max-width 70px
    margin-top -9px
    line-height 16px
    text-align center
    box-shadow 5px 2px 10px rgba(0, 0, 0, 0.5)

#viewport .tooltip span
    display inline-block
    overflow hidden
    max-width 62px
    margin 0 4px

#viewport .score
    display inline-block
    position absolute
    z-index 9999
    margin -50px 0 0 -50px
    width 100px
    height 100px
    line-height 90px
    color #fff
    font-size 30px
    font-weight bold
    text-align center
    text-shadow 0 0 1px #000, 0 0 1px #000, 0 0 1px #000, 0 0 1px #000

#viewport .puzzle
    z-index 0

#viewport .puzzle.active
    cursor pointer

#viewport .puzzle .frame
    z-index 2
    
#viewport .puzzle
#viewport .frame
#viewport .frame .tile
#viewport .frame .corner
    position absolute
    
#viewport .frame .corner
    background white

#viewport .frame .corner.tl
    top 0
    left 0
    
#viewport .frame .corner.tr
    top 0
    right 0
    
#viewport .frame .corner.bl
    bottom 0
    left 0

#viewport .frame .corner.br
    bottom 0
    right 0
    
#viewport .frame .tile.left
    left 0

#viewport .frame .tile.right
    right 0

#viewport .frame .tile.top
    top 0

#viewport .frame .tile.bottom
    bottom 0
    
#viewport .puzzle .tileBorder
    position absolute
    z-index 0
    
#viewport .puzzle .tileBorder.top
    z-index 1

.overlay
    position fixed
    display none
    z-index 1001
    top 0
    bottom 0
    left 0
    right 0
    background rgba(127, 127, 127, 0.5)
    background -webkit-radial-gradient(rgba(127, 127, 127, 0.3), rgba(127, 127, 127, 0.5) 35%, rgba(0, 0, 0, 0.8))
    background -moz-radial-gradient(rgba(127, 127, 127, 0.3), rgba(127, 127, 127, 0.5) 35%, rgba(0, 0, 0, 0.8));
    
.dialog
    position absolute
    display none
    top 50%
    left 50%
    z-index 1002
    padding 20px
    color #000
    background-color rgba(255,255,255,0.9)
    box-shadow: 0px 5px 80px #505050;
    font-family trebuchet
    font-size 11px
    
.dialog.loading
    background-position 2px 2px
    background-repeat no-repeat

nav .expcol
.dialog .close
    position absolute
    padding 0
    width 18px
    height 18px
    text-align center
    border-radius 10px
    box-shadow none
    
.dialog .close
    top -9px
    right -9px

#username
    display none

#username .error
    display none
    padding 1px 5px
    background #ff0
    color #000

#username .inputText
    margin 8px 0
    padding 0 5px
    height 30px
    width 240px
    font-size 20px

#username p
    width 250px
    line-height 14px
    text-align justify
    
#title
    position absolute
    top 50%
    left 50%
    z-index 1002
    margin-top -150px
    margin-left -200px
    height 300px
    width 400px
    color #000
    font-family trebuchet
    text-align center
    font-size 11px
    background rgba(255,255,255,0.8)
    background -webkit-radial-gradient(white, rgba(255, 255, 255, 0.9) 35%, rgba(255, 255, 255, 0.1))
    background -moz-radial-gradient(white, rgba(255, 255, 255, 0.9) 35%, rgba(255, 255, 255, 0.1))
    
#title h1
    margin-top 90px
    font-size 36px

#title h1 span
    position relative
    top -10px
    font-weight normal
    font-size 20px

#title h2
    margin-top 15px
    letter-spacing 1px
    font-weight normal
    font-size 11px
    
#title .progressbar
    position relative
    cursor default
    border-radius 0px
    vertical-gradient(rgb(220,220,220), rgb(255,255,255))
    
#title .progressbar:hover
#title .progressbar:active
    vertical-gradient(rgb(220,220,220), rgb(255,255,255))

#title .progressbar em
    position absolute
    display block
    top 0
    left 0
    z-index 1
    height 100%
    width 0%
    vertical-gradient(rgb(100,220,100), rgb(255,255,255))
    
#title .progressbar span
    position relative
    display inline-block
    z-index 2
    height 100%
    
#title .progressbar span.loading
    padding-right 20px
    background-repeat no-repeat
    background-position right center
    
#title .button
    display inline-block
    width 160px
    margin-top 20px
    margin-bottom 20px
    
#title .hide
    margin-bottom 20px